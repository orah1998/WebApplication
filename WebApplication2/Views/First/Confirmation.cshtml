@model WebApplication2.Models.ToDeleteClient


@{
    ViewBag.Title = "Confirmation";

}





<h2>Deleting Confirmation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <center>
                @*@Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })*@
            </center>
            <br /><br />
                  <center>
                           @Html.DisplayFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                            
                  </center>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="deleteIt" value="Delete" />

            </div>
            <script>
                $('#deleteIt').click(function () {
                    document.getElementById("deleteIt").disabled = true;
                    $.post("@Url.Action("DeleteHandler")", function () {
                        window.location.href = "Config";
                    });
                });



            </script>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Config")
</div>
