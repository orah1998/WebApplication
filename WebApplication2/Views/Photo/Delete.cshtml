@model WebApplication2.Models.DeletePhotoNeeds

@{
    ViewBag.Title = "Delete";

}





<h2>Deleting Confirmation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        <div class="form-group">
            <center>
                @*@Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })*@
            </center>
            <br /><br />
            <center>
                <h2> @Model.deleting  <br /><br /> </h2>
                <img class="img-rounded" style="border-radius:50%" src=@Html.DisplayFor(model => model.deleting, new { htmlAttributes = new { @class = "form-control" } }) alt="">
            </center>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="deleteIt" value="Delete" />



            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Photos")
</div>
<script>

    $('#deleteIt').click(function () {
        $.post("@Url.Action("DeletePhoto")", function () {
            window.location.href = "Photos";
                });
    });

</script>